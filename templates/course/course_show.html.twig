{% extends 'base.html.twig' %}

{% block title %}{{ course.title }} - Knowledge Learning{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_theme_list') }}">Thèmes</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_theme_show', {slug: course. theme.slug}) }}">{{ course.theme.name }}</a></li>
        <li class="breadcrumb-item active">{{ course.title }}</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <h1 class="text-primary-custom">{{ course. title }}</h1>
        <p class="lead">{{ course.description|default('Apprenez à votre rythme avec ce cursus complet.') }}</p>

        <h3 class="mt-5 mb-3">Contenu du cursus</h3>
        <div class="list-group">
            {% for lesson in course.lessons %}
                <a href="{{ path('app_lesson_show', {slug: lesson.slug}) }}" 
                   class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Leçon {{ lesson.position }} :  {{ lesson.title }}</h5>
                            <small class="text-muted">{{ lesson.price }} €</small>
                        </div>
                        <span class="badge bg-primary-custom">Voir</span>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow sticky-top" style="top: 20px;">
            <div class="card-body">
                <h3 class="card-title">{{ course.price }} €</h3>
                <p class="card-text">Cursus complet avec {{ course.lessons|length }} leçons</p>
                
                {% if app.user %}
                    {% if app.user.isVerified %}
                        <a href="{{ path('app_course_buy', {slug: course.slug}) }}" 
                           class="btn btn-primary-custom w-100 mb-2">
                            Acheter le cursus
                        </a>
                    {% else %}
                        <div class="alert alert-warning">
                            Vous devez activer votre compte pour acheter ce cursus.
                        </div>
                    {% endif %}
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary-custom w-100 mb-2">
                        Connectez-vous pour acheter
                    </a>
                {% endif %}

                <hr>

                <h5>Ce que vous allez apprendre :</h5>
                <ul class="list-unstyled">
                    {% for lesson in course.lessons %}
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success"></i> {{ lesson.title }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}