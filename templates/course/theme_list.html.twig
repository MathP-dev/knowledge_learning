{% extends 'base.html.twig' %}

{% block title %}Nos thèmes - Knowledge Learning{% endblock %}

{% block body %}
<h1 class="text-center text-primary-custom mb-5">Nos thèmes de formation</h1>

<div class="row">
    {% for theme in themes %}
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body">
                    <h5 class="card-title text-primary-custom">{{ theme. name }}</h5>
                    <p class="card-text">{{ theme.description|default('Découvrez nos formations. ') }}</p>
                    <a href="{{ path('app_theme_show', {slug: theme. slug}) }}" class="btn btn-primary-custom">
                        Voir les cursus
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}