{% extends 'base.html.twig' %}

{% block title %}Accueil - Knowledge Learning{% endblock %}

{% block body %}
<div class="text-center mb-5">
    <h1 class="display-4 text-primary-custom">Bienvenue sur Knowledge Learning</h1>
    <p class="lead">Apprenez de nouvelles compétences à votre rythme</p>
</div>

<div class="row">
    {% for theme in themes %}
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary-custom">{{ theme.name }}</h5>
                    <p class="card-text">{{ theme.description|default('Découvrez nos formations dans ce domaine. ') }}</p>
                    <a href="{{ path('app_theme_show', {slug: theme.slug}) }}" class="btn btn-primary-custom">
                        Découvrir
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}