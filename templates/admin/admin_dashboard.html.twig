{% extends 'base.html.twig' %}

{% block title %}Administration - Knowledge Learning{% endblock %}

{% block body %}
<h1 class="text-primary mb-4">Tableau de bord administrateur</h1>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center shadow">
            <div class="card-body">
                <h3 class="display-4">{{ users|length }}</h3>
                <p class="text-muted">Utilisateurs</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center shadow">
            <div class="card-body">
                <h3 class="display-4">{{ courses|length }}</h3>
                <p class="text-muted">Cursus</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center shadow">
            <div class="card-body">
                <h3 class="display-4">{{ purchases|length }}</h3>
                <p class="text-muted">Achats</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Utilisateurs</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Vérifié</th>
                        <th>Rôle</th>
                        <th>Date d'inscription</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-warning">Non</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Admin</span>
                                {% else %}
                                    <span class="badge bg-primary">User</span>
                                {% endif %}
                            </td>
                            <td>{{ user. createdAt|date('d/m/Y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Derniers achats</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Utilisateur</th>
                        <th>Type</th>
                        <th>Article</th>
                        <th>Montant</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for purchase in purchases|slice(0, 10) %}
                        <tr>
                            <td>{{ purchase.purchasedAt|date('d/m/Y H:i') }}</td>
                            <td>{{ purchase.user.fullName }}</td>
                            <td>
                                {% if purchase.course %}
                                    <span class="badge bg-primary">Cursus</span>
                                {% else %}
                                    <span class="badge bg-info">Leçon</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if purchase.course %}
                                    {{ purchase.course.title }}
                                {% else %}
                                    {{ purchase.lesson.title }}
                                {% endif %}
                            </td>
                            <td>{{ purchase.amount }} €</td>
                            <td>
                                <span class="badge bg-success">{{ purchase.status }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
